<div class="modal-dialog" role="document">
    <div class="modal-content scroll-modal">
        <div class="modal-header">
            <h5 class="modal-title">Produse comanda</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
                {% for product in products %}
                    <br>
                    <h3>{{ product.restaurant }}</h3>
                    <div class="row border-bottom">
                        <div class="row main-order align-items-center">
                            <div class="col-2">
                                <img class="img-fluid-order"
                                     src="/images/food/{{ product.img }}">
                            </div>
                            <div class="col">
                                <div class="row-order text-muted">{{ product.name }}</div>
                            </div>
                            <div class="col">
                                <div class="cart-item">
                                    <div class="item-actions">
                                        <div class="quantity"> {{ product.quantity }}</div>
                                        <div class="item-price price"> {{ product.price }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
        <div class="float-center">
            <button type="submit" class="btn btn-info close-btn" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>


